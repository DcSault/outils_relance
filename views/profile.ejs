<%- include('partials/header') %>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-user-circle me-2 text-primary"></i>Profil Utilisateur</h2>
    <a href="/dashboard" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left me-1"></i>Retour au tableau de bord
    </a>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-light">
                <h5 class="mb-0">Informations utilisateur</h5>
            </div>
            <div class="card-body">
                <div class="text-center mb-4">
                    <div class="avatar-placeholder mb-3">
                        <i class="fas fa-user-circle fa-5x text-primary"></i>
                    </div>
                    <h4><%= user.username %></h4>
                    <p class="text-muted">
                        <small>Membre depuis <%= new Date(user.createdAt).toLocaleDateString('fr-FR') %></small>
                    </p>
                </div>
                
                <div class="mb-3">
                    <label class="form-label">Identifiant</label>
                    <input type="text" class="form-control" value="<%= user.id %>" readonly>
                </div>
                
                <div class="mb-3">
                    <label class="form-label">Agence associée</label>
                    <% if (agency) { %>
                        <div class="input-group">
                            <input type="text" class="form-control" value="<%= agency.name %>" readonly>
                            <a href="/agencies/edit/<%= agency.id %>" class="btn btn-outline-primary">
                                <i class="fas fa-external-link-alt"></i>
                            </a>
                        </div>
                    <% } else { %>
                        <div class="alert alert-info mb-0">
                            <i class="fas fa-info-circle me-2"></i>
                            Aucune agence associée à votre compte.
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
        
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-light">
                <h5 class="mb-0">Actions</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="/logout" class="btn btn-outline-danger">
                        <i class="fas fa-sign-out-alt me-1"></i>Se déconnecter
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-8">
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-header bg-light">
                <h5 class="mb-0">Activité récente</h5>
            </div>
            <div class="card-body">
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>
                    Aucune activité récente à afficher pour le moment.
                </div>
            </div>
        </div>
        
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-light">
                <h5 class="mb-0">Matériel associé</h5>
            </div>
            <div class="card-body">
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i>
                    Aucun matériel n'est actuellement associé à votre compte.
                </div>
                <div class="text-center mt-3">
                    <a href="/inventory" class="btn btn-primary">
                        <i class="fas fa-boxes me-1"></i>Voir l'inventaire
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %> 