<%- include('partials/header') %>

<div class="row mb-4">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <h2 class="card-title">
                    <i class="fas fa-tachometer-alt me-2 text-primary"></i>Tableau de bord
                </h2>
                <p class="card-text">
                    Bienvenue, <strong><%= user.username %></strong>. 
                    <% if (user.role === 'admin') { %>
                        <span class="badge bg-danger">Administrateur</span>
                    <% } else if (user.role === 'technicien') { %>
                        <span class="badge bg-primary">Technicien DSI</span>
                    <% } else { %>
                        <span class="badge bg-secondary">Employé</span>
                    <% } %>
                    Voici une vue d'ensemble de votre système.
                </p>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <!-- Carte Inventaire - Visible par tous -->
    <div class="col-md-6 col-lg-3">
        <div class="card h-100 border-0 shadow-sm">
            <div class="card-body text-center">
                <div class="display-4 text-primary mb-3">
                    <i class="fas fa-boxes"></i>
                </div>
                <h5 class="card-title">Inventaire</h5>
                <p class="card-text">Consultez le matériel informatique disponible.</p>
                <div class="d-grid">
                    <a href="/inventory" class="btn btn-outline-primary">
                        <i class="fas fa-arrow-right me-1"></i>Accéder
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Carte Agences - Visible par tous -->
    <div class="col-md-6 col-lg-3">
        <div class="card h-100 border-0 shadow-sm">
            <div class="card-body text-center">
                <div class="display-4 text-success mb-3">
                    <i class="fas fa-building"></i>
                </div>
                <h5 class="card-title">Agences</h5>
                <p class="card-text">Consultez les informations des agences.</p>
                <div class="d-grid">
                    <a href="/agencies" class="btn btn-outline-success">
                        <i class="fas fa-arrow-right me-1"></i>Accéder
                    </a>
                </div>
            </div>
        </div>
    </div>

    <% if (isTechnicien) { %>
    <!-- Carte Templates - Visible uniquement par les techniciens et admins -->
    <div class="col-md-6 col-lg-3">
        <div class="card h-100 border-0 shadow-sm">
            <div class="card-body text-center">
                <div class="display-4 text-info mb-3">
                    <i class="fas fa-envelope-open-text"></i>
                </div>
                <h5 class="card-title">Templates</h5>
                <p class="card-text">Gérez les templates de mail pour vos relances.</p>
                <div class="d-grid">
                    <a href="/templates" class="btn btn-outline-info">
                        <i class="fas fa-arrow-right me-1"></i>Accéder
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Carte Relances - Visible uniquement par les techniciens et admins -->
    <div class="col-md-6 col-lg-3">
        <div class="card h-100 border-0 shadow-sm">
            <div class="card-body text-center">
                <div class="display-4 text-warning mb-3">
                    <i class="fas fa-bell"></i>
                </div>
                <h5 class="card-title">Relances</h5>
                <p class="card-text">Gérez les relances pour le matériel prêté.</p>
                <div class="d-grid">
                    <a href="/reminders" class="btn btn-outline-warning">
                        <i class="fas fa-arrow-right me-1"></i>Accéder
                    </a>
                </div>
            </div>
        </div>
    </div>
    <% } %>

    <% if (isAdmin) { %>
    <!-- Carte Utilisateurs - Visible uniquement par les admins -->
    <div class="col-md-6 col-lg-3">
        <div class="card h-100 border-0 shadow-sm">
            <div class="card-body text-center">
                <div class="display-4 text-danger mb-3">
                    <i class="fas fa-users-cog"></i>
                </div>
                <h5 class="card-title">Utilisateurs</h5>
                <p class="card-text">Gérez les utilisateurs et leurs droits.</p>
                <div class="d-grid">
                    <a href="/users" class="btn btn-outline-danger">
                        <i class="fas fa-arrow-right me-1"></i>Accéder
                    </a>
                </div>
            </div>
        </div>
    </div>
    <% } %>
</div>

<!-- Statistiques - Affichage différent selon le rôle -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-light">
                <h5 class="mb-0"><i class="fas fa-chart-bar me-2"></i>Statistiques</h5>
            </div>
            <div class="card-body">
                <div class="row g-4">
                    <!-- Statistiques de base - Visibles par tous -->
                    <div class="col-md-4">
                        <div class="card bg-light">
                            <div class="card-body text-center">
                                <h6 class="card-title">Matériel disponible</h6>
                                <h2 class="display-4 text-primary"><%= stats.itemsInStock %></h2>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-4">
                        <div class="card bg-light">
                            <div class="card-body text-center">
                                <h6 class="card-title">Matériel emprunté</h6>
                                <h2 class="display-4 text-warning"><%= stats.itemsBorrowed %></h2>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-4">
                        <div class="card bg-light">
                            <div class="card-body text-center">
                                <h6 class="card-title">Matériel assigné</h6>
                                <h2 class="display-4 text-success"><%= stats.itemsAssigned %></h2>
                            </div>
                        </div>
                    </div>
                    
                    <% if (isTechnicien) { %>
                    <!-- Statistiques pour techniciens et admins -->
                    <div class="col-md-4">
                        <div class="card bg-light">
                            <div class="card-body text-center">
                                <h6 class="card-title">Relances en attente</h6>
                                <h2 class="display-4 text-danger"><%= stats.pendingReminders %></h2>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-4">
                        <div class="card bg-light">
                            <div class="card-body text-center">
                                <h6 class="card-title">Agences actives</h6>
                                <h2 class="display-4 text-info"><%= stats.activeAgencies %></h2>
                            </div>
                        </div>
                    </div>
                    <% } %>
                    
                    <% if (isAdmin) { %>
                    <!-- Statistiques pour admins uniquement -->
                    <div class="col-md-4">
                        <div class="card bg-light">
                            <div class="card-body text-center">
                                <h6 class="card-title">Utilisateurs totaux</h6>
                                <h2 class="display-4 text-secondary"><%= stats.totalUsers %></h2>
                            </div>
                        </div>
                    </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %> 